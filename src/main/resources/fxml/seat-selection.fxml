<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="main-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MoziCity.mozi_jegyfoglalo.controller.SeatSelectionController">

    <top>
        <VBox alignment="CENTER" styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <Label text="MoziCity Jegyfoglaló" />
                <HBox alignment="CENTER" spacing="10">
                    <Label fx:id="movieTitleLabel" style="-fx-font-size: 18px; -fx-text-fill: #4CAF50; -fx-font-weight: bold;" text="Film címe" />
                    <Label text="|" style="-fx-text-fill: gray;" />
                    <Label fx:id="showtimeLabel" style="-fx-font-size: 16px; -fx-text-fill: white;" text="Időpont" />
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <children>

                <VBox alignment="CENTER" maxWidth="1400" styleClass="glass-panel">
                    <padding>
                        <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
                    </padding>
                    <children>

                        <Label styleClass="screen-text" text="VÁSZON" />
                        <Region styleClass="screen-shape" prefHeight="10" maxWidth="500" />

                        <Region prefHeight="40" />

                        <GridPane fx:id="seatsGridPane" alignment="CENTER" hgap="12.0" vgap="12.0">
                        </GridPane>

                        <HBox alignment="CENTER" spacing="30.0">
                            <padding>
                                <Insets top="40.0" />
                            </padding>
                            <children>
                                <HBox alignment="CENTER" spacing="8.0">
                                    <Region styleClass="seat-free, seat-button" prefWidth="30" prefHeight="30" />
                                    <Label style="-fx-text-fill: #cccccc;" text="Szabad" />
                                </HBox>
                                <HBox alignment="CENTER" spacing="8.0">
                                    <Region styleClass="seat-selected, seat-button" prefWidth="30" prefHeight="30" />
                                    <Label style="-fx-text-fill: #4CAF50; -fx-font-weight: bold;" text="Kiválasztva" />
                                </HBox>
                                <HBox alignment="CENTER" spacing="8.0">
                                    <Region styleClass="seat-taken, seat-button" prefWidth="30" prefHeight="30" />
                                    <Label style="-fx-text-fill: #ff6666;" text="Foglalt" />
                                </HBox>
                            </children>
                        </HBox>

                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="20.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#handleBack" style="-fx-font-size: 14px;" text="Vissza a részletekhez" />
                <Button fx:id="continueButton" disable="true" mnemonicParsing="false" onAction="#handleContinue" styleClass="action-button" text="Tovább a véglegesítéshez" />
            </children>
        </HBox>
    </bottom>

</BorderPane>