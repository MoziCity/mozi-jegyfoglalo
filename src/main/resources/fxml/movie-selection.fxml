<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.MoziCity.mozi_jegyfoglalo.controller.MovieSelectionController"
            styleClass="main-background">

    <top>
        <VBox styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_RIGHT">
                    <padding>
                        <Insets right="20.0" top="10.0" />
                    </padding>
                    <children>
                        <Button text="Admin belépés" onAction="#handleAdminLogin"
                                style="-fx-font-size: 11px; -fx-background-color: #444; -fx-text-fill: #aaa; -fx-cursor: hand;"/>
                    </children>
                </HBox>

                <VBox alignment="CENTER">
                    <children>
                        <Label text="MoziCity Jegyfoglaló" />
                        <Label text="Válasszon filmet a vetítéshez" style="-fx-font-size: 16px; -fx-font-weight: 400;"/>
                    </children>
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER"
                    style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <FlowPane fx:id="moviesFlowPane" hgap="20.0" vgap="20.0" styleClass="glass-panel">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#handleRefresh" text="Frissítés" />

                <Button fx:id="addMovieButton"
                        mnemonicParsing="false"
                        onAction="#handleAddNewMovie"
                        text="Új film hozzáadása"
                        styleClass="action-button"
                        visible="false"
                        managed="false"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>