<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.MoziCity.mozi_jegyfoglalo.controller.MovieSelectionController"
            styleClass="main-background"> <!-- <- ITT VAN A HÁTTÉRKÉP -->

    <top>
        <VBox alignment="CENTER" styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <Label text="MoziCity Jegyfoglaló" />
                <Label text="Válasszon filmet a vetítéshez" style="-fx-font-size: 16px; -fx-font-weight: 400;"/>
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <!-- A ScrollPane legyen átlátszó, hogy látszódjon alóla a háttér -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER"
                    style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <!-- A FlowPane, ami a filmeket tartalmazza, kapja az "üveges" effektust -->
                <FlowPane fx:id="moviesFlowPane" hgap="20.0" vgap="20.0" styleClass="glass-panel">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#handleRefresh" text="Frissítés" />
            </children>
        </HBox>
    </bottom>
</BorderPane>