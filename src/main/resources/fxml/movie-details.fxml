<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="main-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MoziCity.mozi_jegyfoglalo.controller.MovieDetailsController">

    <top>
        <VBox alignment="CENTER" styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <Label text="MoziCity Jegyfoglaló" />
                <Label style="-fx-font-size: 16px; -fx-font-weight: 400;" text="Film részletei" />
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>

                <VBox alignment="TOP_CENTER" styleClass="glass-panel">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <ImageView fx:id="posterImageView" fitHeight="450.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
                    </children>
                </VBox>

                <VBox alignment="TOP_LEFT" maxWidth="600" spacing="20.0" styleClass="glass-panel" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                    <children>
                        <Label fx:id="titleLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="Film Címe" wrapText="true" />

                        <Label style="-fx-font-weight: bold; -fx-text-fill: #aaaaaa;" text="Leírás:" />

                        <Label fx:id="descriptionLabel" maxWidth="550" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;" text="Hosszú leírás..." wrapText="true" />

                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label style="-fx-font-weight: bold; -fx-text-fill: #aaaaaa;" text="Időpont:" />
                            <Label fx:id="showtimeLabel" style="-fx-text-fill: white;" text="2025..." />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label style="-fx-font-weight: bold; -fx-text-fill: #aaaaaa;" text="Jegyár:" />
                            <Label fx:id="priceLabel" style="-fx-text-fill: #4CAF50; -fx-font-weight: bold; -fx-font-size: 18px;" text="2500 Ft" />
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#handleBack" style="-fx-font-size: 14px;" text="Vissza a listához" />
                <Button mnemonicParsing="false" onAction="#handleBookTicket" style="-fx-font-size: 16px; -fx-padding: 10 30 10 30;" styleClass="action-button" text="Tovább a székválasztáshoz" />
            </children>
        </HBox>
    </bottom>

</BorderPane>