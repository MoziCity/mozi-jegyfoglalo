<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MoziCity.mozi_jegyfoglalo.controller.ConfirmationController">
    <top>
        <VBox alignment="CENTER" styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <Label text="Foglalás megerősítése" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER_LEFT" spacing="5.0" styleClass="confirmation-box">
                    <children>
                        <Label text="Film:" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="movieTitleLabel" text="Film címe" textFill="#e0e0e0" />
                    </children>
                </VBox>
                <VBox alignment="CENTER_LEFT" spacing="5.0" styleClass="confirmation-box">
                    <children>
                        <Label text="Időpont:" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="showtimeLabel" text="Vetítés ideje" textFill="#e0e0e0" />
                    </children>
                </VBox>
                <VBox alignment="CENTER_LEFT" spacing="5.0" styleClass="confirmation-box">
                    <children>
                        <Label text="Helyek:" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="seatsLabel" text="Helyek listája" textFill="#e0e0e0" />
                    </children>
                </VBox>
                <VBox alignment="CENTER_LEFT" spacing="5.0" styleClass="confirmation-box">
                    <children>
                        <Label text="Összesen:" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalPriceLabel" text="0 Ft" textFill="#4CAF50">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" padding="20.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#handleBack" text="Vissza" />
                <Button mnemonicParsing="false" onAction="#handleConfirm" styleClass="action-button" text="Foglalás megerősítése" />
            </children>
        </HBox>
    </bottom>
</BorderPane>